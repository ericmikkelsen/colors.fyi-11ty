--- 
layout: base.njk 
pagination: 
  data: sortedColors
  size: 1
  alias: color
permalink: "/{{ pagination.items[0]}}/index.html"
---
<style>
  html {
    font-family: sans-serif;
    font-size: 1em;
    margin: 0;
    padding: 5%;
  }
  * {
    box-sizing: border-box;
  }
  body {
    background: #111;
    color: #fff;
    margin: 0 auto;
    padding: 0;
  }
  h1 {
    font-size: 1.1875em;
    margin: 0 0 5.263157894%;
  }
  
  ol {
    list-style-position: inside;
    padding: 0;
  }
  li[style] {
    color: #000;
    padding: 2.631578947% 1em;
    text-align: center;
    width: 10em;
    float: left;
    margin: 0;
  }
  li[style] span {
    content-visibility: auto;
    contain-intrinsic-size: 10em 3.849375em;
    color: #fff;
  }
  a[style] {
    background-color: currentColor;
    display: block;
    padding: 2.631578947%;
  }
  a[style] span {
    color: #fff;
  }

</style>
<h1>colors.fyi/{{color}}</h1>
<ol>
  {% for color in sortedColors[color] %}
    <li style='background:#{{color}}'>
      <span>
        #{{ color }}
      </span>
    </li>
  {% endfor -%}
</ol>