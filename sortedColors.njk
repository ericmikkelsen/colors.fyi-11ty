--- 
layout: base.njk 
pagination: 
  data: sortedColors
  size: 1
  alias: color
permalink: "/{{ pagination.items[0]}}/index.html"
---
<style>
  html {
    font-family: sans-serif;
    font-size: 1em;
    margin: 0;
    padding: 0 5% 4em;
    border-top: .125em solid #{{sortedColors[color][0]}};
    -moz-text-size-adjust: none;
    -webkit-text-size-adjust: none;
    text-size-adjust: none;
  }
  * {
    box-sizing: border-box;
  }
  body {
    background: #000;
    color: #fff;
    margin: 0 auto;
    padding: 0;
  }
  h1 {
    font-size: 1.1875em;
    margin: 0;
    padding: 5.263157894% 0;
  }
  
  ol {
    display: inline-block;
    width: 100%;
    background-color: #{{sortedColors[color][0]}};
    list-style-position: inside;
    padding: 0;
    margin: 0;
  }
  li {
    color: #000;
    color: #fff;
    padding: 1em;
    max-width: 100%;
    height: 3.15625em;
    width: 12em;
    float: left;
    margin: 0;
  }
  li::marker {
    color: #000;
  }
  a[style] span {
    color: #fff;
  }
  .home {
    display:inline;
    padding:0;
    color: inherit;
    text-decoration: none;
    border-bottom: .125em solid #fff;
  }
  h1 span {
    color: #{{sortedColors[color][0]}};
    font-weight: normal;
  }
  .top {
    position: fixed;
    position: sticky;
    bottom: 0;
    display: inline-block;
    text-align: center;
    color: inherit;
    padding: 1em 0;
    left: 0;
    right: 0;
    width: 100%;
    background:#000;
    color: #{{sortedColors[color][0]}};
    font-size: 1.1875em;
    box-shadow: 0 -.5em 2em rgba(0,0,0,.5);
    transform: translate3d(0,0,.001px);
    contain: strict;
  }
</style>
<header>
  <h1 id="title"><a href="/" class='home'>colors.fyi</a> <span>/ {{color}}</span></h1>
</header>

<ol role="list">
  {% for color in sortedColors[color] %}<li style='background:#{{color}}'>#{{ color }}</li>{% endfor -%}
</ol>
<a href="#title" class="top">Back to top</a>