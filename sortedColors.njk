--- 
layout: base.njk 
pagination: 
  data: sortedColors
  size: 1
  alias: color
permalink: "/{{ pagination.items[0]}}/index.html"
---
<style>
  html {
    font-family: sans-serif;
    font-size: 1em;
    margin: 0;
    padding: 0 5% 4em;
    border-top: .125em solid #{{sortedColors[color][0]}};
  }
  * {
    box-sizing: border-box;
  }
  body {
    background: #111;
    color: #fff;
    margin: 0 auto;
    padding: 0;
  }
  h1 {
    font-size: 1.1875em;
    margin: 0;
    padding: 5.263157894% 0;
  }
  
  ol {
    list-style-position: inside;
    padding: 0;
    margin: 0;
  }
  li[style] {
    color: #000;
    padding: 2.631578947% 1em;
    text-align: center;
    width: 10em;
    float: left;
    margin: 0;
  }
  li[style] span {
    content-visibility: auto;
    contain-intrinsic-size: 10em 3.849375em;
    color: #fff;
  }
  a[style] {
    background-color: currentColor;
    display: block;
    padding: 2.631578947%;
  }
  a[style] span {
    color: #fff;
  }
  .home {
    display:inline;
    padding:0;
    color: inherit;
    text-decoration: none;
    border-bottom: .125em solid #fff;
  }
  h1 span {
    color: #{{sortedColors[color][0]}};
    font-weight: normal;
  }
  .top {
    position: fixed;
    bottom: 0;
    display: block;
    text-align: center;
    color: inherit;
    padding: 1em 0;
    left: 0;
    right: 0;
    width: 100%;
    background:#000;
    color: #{{sortedColors[color][0]}};
    font-size: 1.1875em;
    box-shadow: 0 -.5em 2em rgba(0,0,0,.5);
  }
</style>
<header>
<h1 id="title"><a href="/" class='home'>colors.fyi</a> <span>/ {{color}}</span></h1>
<a href="#title" class="top">Back to top</a>
</header>

<ol>
  {% for color in sortedColors[color] %}
    <li style='background:#{{color}}'>
      <span>
        #{{ color }}
      </span>
    </li>
  {% endfor -%}
</ol>